		"tr_ingest_population_data_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/4c1c6033-2481-415e-8510-0b2b20aad1f1/resourceGroups/test/providers/Microsoft.Storage/storageAccounts/amitdemo1234"
		}
	},
